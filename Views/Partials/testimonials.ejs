<section class="testimonials bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">What Our Customers Are Saying</h2>
        <div class="row">
            <% topReviews.forEach(review => { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">"<%= review.comment %>"</p>
                            <footer class="blockquote-footer">Rating: <%= review.rating %> stars</footer>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
