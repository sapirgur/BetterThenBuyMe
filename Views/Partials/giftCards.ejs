<% items.forEach(item => { %>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= item.description %></p>
                <% if (item._id) { %>
                    <a href="/shop/<%= item._id %>" class="btn btn-primary">View Businesses</a>
                <% } else { %>
                    <a href="#" class="btn btn-primary">Buy Gift Card</a>
                <% } %>
            </div>
        </div>
    </div>
<% }) %>
