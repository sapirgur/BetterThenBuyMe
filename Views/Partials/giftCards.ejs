<% items.forEach(item => { %>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body">
                <img src="/<%= item.imgPath.replace(/\\/g, '/') %>" alt="<%= item.name %> Logo" class="img-fluid mb-3">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text"><%= item.description %></p>
                <a href="/shop/<%= item._id %>" class="btn btn-primary">View Businesses</a>
            </div>
        </div>
    </div>
<% }) %>
