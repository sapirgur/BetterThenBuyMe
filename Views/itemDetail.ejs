<!DOCTYPE html>
<html lang="he">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BuyMe - Home</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a076d05399.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include('partials/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <a href="/">Home</a> | <%= item.name %>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <img src="/<%= item.imgPath %>" alt="<%= item.name %> Image" class="img-fluid">
                        <h5 class="mt-2"><%= item.name %></h5>
                    </div>
                    <div class="mb-3">
                        <p><%= item.description %></p>
                    </div>
                    <div class="mb-3">
                        <h6>Details</h6>
                        <p>Contact: <%= item.contact_info %></p>
                        <p>Category: <%= item.categories.join(', ') %></p>
                        <p>Geographical Location: <%= item.geographical_location.join(', ') %></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="priceInput" class="form-label">Price</label>
                        <input type="number" class="form-control" id="priceInput" placeholder="Enter price">
                    </div>
                    <button type="button" class="btn btn-primary" id="actionButton">Action</button>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('actionButton').addEventListener('click', async function() {
        const itemName = "<%= item.name %>";
        const price = parseFloat(document.getElementById('priceInput').value);

        if (isNaN(price) || price <= 0) {
            console.error('Invalid price value');
            return;
        }

        try {
            const response = await fetch('/add-item-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ itemName, price })
            });

            const result = await response.json();
            if (result.success) {
                // Redirect to cart or handle success
                
            } else {
                console.error('Failed to add item to cart');
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
</script>
</body>
</html>