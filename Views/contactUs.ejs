<!DOCTYPE html>
<html lang="he">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>עמוד צור קשר</title>
    <link rel="icon" href="/css/Images/gifty/gifty_card.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/contactUs.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/aboutUs.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>" defer></script>
    <script src="/js/contactUs.js" defer></script>
</head>
<body>
    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <div class="container mt-5">
        <h1 class="text-center">צור קשר</h1>
        <div class="row mt-4">
            <% managers.forEach((manager, index) => { %>
                <div class="col-md-6 mb-4 d-flex align-items-stretch">
                    <div class="card w-100 h-100 flex-row <% if (index % 2 === 0) { %> flex-md-row-reverse <% } %>">
                        <div class="card-image">
                            <img src="<%= manager.imgpath %>" alt="Profile Image" class="img-fluid rounded-circle">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title"><%= manager.name %></h3>
                            <p class="card-text"><%= manager.description %></p>
                            <a href="mailto:<%= manager.email %>" class="card-link"><%= manager.email %></a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <!-- Map Container -->
                <div id="map" style="height: 500px; width: 100%;"></div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
